{
  "name": "cloud-mkdoc",
  "version": "0.9.2",
  "main": "main.js",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.5.0",
    "electron-store": "^5.2.0"
  },
  "author": {
    "name": "ShuNan Wang",
    "email": "wangshunan12@gmail.com"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "buildMain": "webpack",
    "onlyEle": "nodemon --watch main.js --watch src/menuTemplate.js --exec \"electron .\"",
    "dev": "concurrently \"wait-on http://localhost:3000/ && electron .\" \"cross-env BROWSER=none npm start\" ",
    "release": "cross-env GH_TOKEN=4aec676d77c503f0524c19bd15ab0f519cfac3cd electron-builder",
    "prerelease": "npm run build && npm run buildMain",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": "npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain"
  },
  "homepage": "./",
  "build": {
    "appId": "cloudDoc",
    "productName": "QiniuCloudDoc",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "extends": null,
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "ShuNan Wang"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-brands-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.13.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "babel-preset-es2015": "^6.24.1",
    "classnames": "^2.2.6",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^18.3.7",
    "electron-builder": "^22.8.0",
    "electron-is-dev": "^1.2.0",
    "electron-updater": "^4.3.4",
    "node-sass": "^4.14.1",
    "qiniu": "^7.3.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-simplemde-editor": "^4.1.3",
    "uuid": "^8.2.0",
    "wait-on": "^5.1.0",
    "webpack-cli": "^3.3.12"
  }
}
